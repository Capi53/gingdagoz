</section>
</div>

</header>

<br><br><br><br><br>    <!--ここ最悪すぎるからもっとどうにかできんかな〜-->
<span class="br">

<div class = "flex">
<div class = "box5">
<div id="container">
<div id="calendar">
</div>
</div> 
</div>
<div class = "box1">
<h2>生徒</h2>
<ul>
<% @users.each do |u| %>
  <% if u.student? %>
    <li><a href="/users/<%= u.id %>"><%= u.name %>さん</a></li>
  <% end %>
<% end %>
</ul>
</div>
<div class = "box2">
<h2>先生</h2>
<ul>
<% @users.each do |u| %>
  <% if u.teacher? %>
    <li><a href="/users/<%= u.id %>"><%= u.name %>先生</a></li>
  <% end %>
<% end %>
</ul>
</div>
</div>

<div class="disp-img2"></div>
</span>

<h4><%= link_to '予定をカレンダーに追加', controller: 'events' %></h4>

<script>
// CRUDを行う際にCSRF対策のtokenを発行
    $(document).ready(function() {
    var prepare = function(options, originalOptions, jqXHR) {
      var token;
      if (!options.crossDomain) {
        token = $('meta[name="csrf-token"]').attr('content');
        if (token) {
          return jqXHR.setRequestHeader('X-CSRF-Token', token);
        }
      }
    };
    }
    )

    // カレンダー表示
    $('#calendar').fullCalendar ({
        header: {
            left: 'prev,next today',
            center: 'month,agendaWeek,agendaDay',
            right: 'title'
        },

        buttonText: {
              prev: "<",
              next: ">"
        },

        timezone: 'UTC',
        events: '/users/events.json',
        navLinks: true,
        selectable: true,
        selectHelper: true,
        // 日付クリック
        dayClick : function ( date , jsEvent , view ) {
            $('#inputScheduleForm').modal('show');
            },

        // event クリックで編集、削除
        eventClick : function(event, jsEvent , view) {
            jsEvent.preventDefault();
            $(`#inputScheduleEditForm${event.id}`).modal('show');
        },

        eventMouseover : function(event, jsEvent , view) {
            jsEvent.preventDefault();
        }
    })

</script>

<footer>Copyright ©GingDagoz All Rights Reserved.</footer>
</div>
</body>
