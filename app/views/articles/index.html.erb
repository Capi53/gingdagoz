<h1>アナグラさんとのチャット</h1>

<h2><%= link_to '新たなコメント', new_article_path %></h2>

<table>
  <tr>
    <th>Name</th>
    <th>Text</th>
    <th></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.name %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>
